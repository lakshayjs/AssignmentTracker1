<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<!--Content for the edit Operation-->
<div class="container"></div>
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="Course">Course</label>
                    <input type="text" class="form-control" id="Course" placeholder="Enter the course name" name="Course" required>
                </div>
                <div class="form-group">
                    <label for="Instructor">Instructor</label>
                    <input type="text" class="form-control" id="Instructor" placeholder="Enter the Instructor name" name="Instructor" required>
                </div>
                
                <div class="form-group">
                    <label for="descriptionTextArea">assignment Description</label>
                    <textarea type="text" class="form-control" id="descriptionTextArea"  placeholder="enter the assignment Description" name="Description" required></textarea>
                </div>
                <div class="form-group">
                    <label for="Due Date">Due Date</label>
                    <input type="text" class="form-control" id="Due Date" placeholder="assignment's due date" name="Due Date" required>
                </div>
                </div>
                <button class="btn btn-primary" type="submit">Submit
                <i class="fas fa-edit"></i></button>  
                <button class="btn btn-warning" type="submit">Cancel
                    <i class="fas fa-undo"></i></button>    
            </form>
        </div>
    </div>
</div>
<%- include ../Partials/footer.ejs%>
