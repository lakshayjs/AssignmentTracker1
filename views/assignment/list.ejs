<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<!--assignment Database-->
<main class="container">
    <div class="row">
        <div class="offset-md-1 col-md-10">
            <h1><%= title %></h1>
            <br>
            <a href="/assignmentslist/add" class="btn btn-primary" role="button">
                <i class="fas fa-plus-circle"></i> Add assignment
            </a>
            <table class="table table-bordered table-striped table-hover">
                <tr class="d-flex">
                    <th class="text-center col-2">Course</th>
                    <th class="text-center col-2">Instructor</th>
                    <th class="col-4">Description</th>
                    <th class="text-center col-1">Due Date</th>
                </tr>
                <% for(let count=0; count < assignmentList.length; count++) { %>
                <tr class="d-flex">
                    <td class="text-center col-2"><%= assignmentList[count].Course %></td>
                    <td class="text-center col-2"><%= assignmentList[count].Instructor %></td>
                    <td class="col-4"><%= assignmentList[count].Description %></td>
                    <td class="text-center col-1"><%= assignmentList[count]["Due Date"] %></td>
                    <td class="text-center col-1">
                        <a href="/assignmentslist/edit/<%= assignmentList[count]._id %>" class="btn btn-primary btn-sm">
                            <i class="fas fa-pencil-alt"></i>Edit
                        </a>
                    </td>
                    <td class="text-center col-1">
                        <a href="/assignmentslist/delete/<%= assignmentList[count]._id %>" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt"></i>Delete
                        </a>
                    </td>
                </tr>
                <% } %>
            </table>
        </div>
    </div>
</main>
<%- include('../Partials/footer.ejs') %>
